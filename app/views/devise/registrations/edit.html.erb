<section>
  <h2><%= current_user.username %></h2>

  <div class="field">
    <%= form_with url: update_api_key_settings_path, method: :patch, local: true do |f| %>
      <%= label_tag :tmdb_api_key, "tmdb api key" %>
      <div class="api-key-input-wrapper">
        <%= text_field_tag :tmdb_api_key, current_user.tmdb_api_key, autocomplete: "off", class: "api-key-input" %>
        <%= submit_tag "set", class: "btn" %>
      </div>
      <% if @api_key_error %>
        <div class="api-key-error">
          <span class="icon-x">✖</span> <%= @api_key_error %>
        </div>
      <% elsif current_user.tmdb_api_key.present? && !@api_key_error %>
        <div class="api-key-success">
          <span class="icon-check">✔</span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="settings-actions">
    <%= link_to "update password", edit_password_settings_path, class: "btn btn-action" %>
    <%= button_to "sign out", destroy_user_session_path, method: :delete, class: "btn btn-action" %>
    <button type="button" class="btn btn-action btn-danger" onclick="openDeleteModal()">delete account</button>
  </div>
</section>

<!-- Delete Account Modal -->
<div id="deleteModal" class="modal" style="display: <%= flash[:alert] == 'incorrect password' ? 'flex' : 'none' %>;">
  <div class="modal-content">
    <h3>delete account</h3>
    <p>are you sure?</p>
    <% if flash[:alert] == 'incorrect password' %>
      <p class="modal-error">incorrect password</p>
    <% end %>
    <%= form_with url: registration_path(resource_name), method: :delete, local: true do |f| %>
      <div class="field">
        <%= label_tag :current_password, "enter password" %>
        <%= password_field_tag :current_password, nil, autocomplete: "current-password", required: true %>
      </div>
      <div class="modal-actions">
        <%= submit_tag "confirm", class: "btn btn-action btn-danger" %>
        <button type="button" class="btn btn-action" onclick="closeDeleteModal()">cancel</button>
      </div>
    <% end %>
  </div>
</div>

<script>
function openDeleteModal() {
  document.getElementById('deleteModal').style.display = 'flex';
}

function closeDeleteModal() {
  document.getElementById('deleteModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
  const modal = document.getElementById('deleteModal');
  if (event.target == modal) {
    closeDeleteModal();
  }
}
</script>


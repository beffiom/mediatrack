<section>
  <h2>update password</h2>

  <%= form_with url: change_password_settings_path, method: :patch, local: true do |f| %>
    <div class="field">
      <%= label_tag :current_password, "current password" %>
      <%= password_field_tag :current_password, nil, autocomplete: "current-password", required: true %>
    </div>

    <div class="field">
      <%= label_tag :password, "new password" %>
      <%= password_field_tag :password, nil, autocomplete: "new-password", required: true %>
      <em>6 characters minimum</em>
    </div>

    <div class="field">
      <%= label_tag :password_confirmation, "confirm new password" %>
      <%= password_field_tag :password_confirmation, nil, autocomplete: "new-password", required: true %>
    </div>

    <div class="password-actions">
      <%= submit_tag "update password", class: "btn btn-action" %>
      <%= link_to "cancel", edit_user_registration_path, class: "btn btn-action btn-secondary" %>
    </div>
  <% end %>
</section>

<style>
.password-actions {
  margin-top: 2rem;
  display: flex;
  gap: 1rem;
  flex-direction: column;
  max-width: 300px;
}

.btn-action {
  padding: 1rem;
  text-align: center;
  background-color: black;
  color: #00ff7f;
  border: 2px solid #00ff7f;
  cursor: pointer;
  text-decoration: none;
  display: block;
  font-weight: bold;
  transition: all 0.2s;
}

.btn-action:hover {
  background-color: #00ff7f;
  color: white;
}

.btn-secondary {
  color: #888;
  border-color: #888;
}

.btn-secondary:hover {
  background-color: #888;
  color: white;
}
</style>
